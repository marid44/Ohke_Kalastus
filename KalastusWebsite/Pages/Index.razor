@page "/"

<PageTitle>Kalastajien yhteisö</PageTitle>

@code {
    // Navigation methods
    private void NavigateToCreateDiscussion()
    {
        NavigationManager.NavigateTo("/create-discussion");
    }

    private void NavigateToDiscussions()
    {
        NavigationManager.NavigateTo("/discussions");
    }

    private void NavigateToRegister()
    {
        NavigationManager.NavigateTo("/add-user");
    }

    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }

    [Inject] private NavigationManager NavigationManager { get; set; }
}


<div class="container">
    <div class="row">
        <div class="col">
            <h1>Tervetuloa kalastajien yhteisöön</h1>
        </div>
    </div>
</div>

<div class="keskustelu">
    <div class="row">
        <div class="col">
            <button class="btn btn-primary">Luo uusi keskustelu</button>
            <button class="btn btn-primary">Keskustelut</button>
        </div>
    </div>
</div>

<div class="kirjautuminen">
    <div class="row">
        <div class="col">
            <button class="btn btn-primary" @onclick="NavigateToRegister">Rekisteröidy</button>
            <button class="btn btn-primary" @onclick="NavigateToLogin">Kirjaudu</button>
        </div>
    </div>
</div>

<style>
    .keskustelu {
        text-align: center;
        font-weight: lighter;
        font-family: 'Courier New', Courier, monospace;
        margin-bottom: 20px;
    }
</style>


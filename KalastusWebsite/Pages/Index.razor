@page "/"
@using KalastusWebsite.Services
@inject UserSession UserSession

<PageTitle>Kalastajien Yhteisö</PageTitle>

@code {
    [Inject] private NavigationManager NavigationManager { get; set; }

    private void NavigateToCreateDiscussion()
    {
        if (UserSession.IsLoggedIn)
        {
            NavigationManager.NavigateTo("/add-conversation");
        }
        else
        {
            UserSession.RedirectUrl = "/add-conversation";
            NavigationManager.NavigateTo("/login");
        }
    }

    private void NavigateToDiscussions()
    {
        NavigationManager.NavigateTo("/conversations");
    }

    private void NavigateToRegister()
    {
        NavigationManager.NavigateTo("/add-user");
    }

    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }
}

<div class="hero">
    <h1>Kalastajien yhteisö</h1>
    <p>Liity jäseneksi, jaa kokemuksiasi, ja keskustele muiden kalastajien kanssa!.</p>
    <button class="hero-btn" @onclick="NavigateToRegister">Osallistu yhteisöön</button>
</div>

<div class="container">
    <div class="welcome-message">
        @if (UserSession.IsLoggedIn)
        {
            <h2>Terve, @UserSession.Username!</h2>
        }
        else
        {
            <h2>Tervetuloa yhteisöön!</h2>
        }
    </div>

    <div class="action-buttons">
        <button class="btn-primary" @onclick="NavigateToCreateDiscussion">Luo keskustelu</button>
        <button class="btn-primary" @onclick="NavigateToDiscussions">Katsele keskusteluja</button>
    </div>

    @if (!UserSession.IsLoggedIn)
    {
        <div class="auth-buttons">
            <button class="btn-secondary" @onclick="NavigateToRegister">Rekisteröidy</button>
            <button class="btn-secondary" @onclick="NavigateToLogin">Kirjaudu</button>
        </div>
    }
</div>

